{
    "extends": ["@diplodoc/eslint-config", "@diplodoc/eslint-config/prettier"],
    "root": true,
    "env": {
        "browser": true
    },
    "overrides": [
        {
            "files": ["*.ts", "*.tsx"],
            "parser": "@typescript-eslint/parser",
            "parserOptions": {
                "sourceType": "module",
                "project": ["./tsconfig.json"]
            }
        }
    ],
    "settings": {
        "react": {
            "version": "detect"
        }
    }
}
