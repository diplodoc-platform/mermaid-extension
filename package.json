{
  "name": "@diplodoc/mermaid-extension",
  "version": "0.0.2",
  "description": "Mermaid plugin for Diplodoc transformer and builder",
  "main": "plugin/index.js",
  "types": "plugin/index.d.ts",
  "exports": {
    ".": "./plugin/index.js",
    "./runtime": {
      "require": {
        "default": "./runtime/index.js"
      },
      "browser": {
        "default": "./runtime/index.js"
      }
    },
    "./hooks": "./hooks/index.js"
  },
  "scripts": {
    "build": "run-p build:*",
    "build:plugin": "./esbuild/plugin.sh",
    "build:hooks": "./esbuild/hooks.sh",
    "build:runtime": "./esbuild/runtime.sh",
    "build:declarations": "tsc --emitDeclarationOnly --outDir .",
    "prepublish": "npm run build",
    "test": "jest"
  },
  "keywords": [
    "mermaid",
    "markdown-it"
  ],
  "author": "",
  "license": "ISC",
  "files": [
    "plugin",
    "runtime",
    "hooks"
  ],
  "optionalDependencies": {
    "react": "^18.2.0"
  },
  "devDependencies": {
    "@doc-tools/transform": "^2.16.4",
    "@types/markdown-it": "^12.2.3",
    "@types/react": "^18.0.35",
    "esbuild": "^0.17.12",
    "jest": "^29.5.0",
    "markdown-it": "^13.0.1",
    "npm-run-all": "^4.1.5",
    "react": "^18.2.0",
    "typescript": "^5.0.2"
  },
  "dependencies": {
    "mermaid": "^10.0.2",
    "ts-dedent": "^2.2.0"
  }
}
